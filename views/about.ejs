<style>
    /* about-section */
    .about-section {
        padding: 120px 30px;
        background: #050505;
        color: white;
    }

    .about-container {
        max-width: 1500px;
        margin: auto;
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 80px;
        align-items: center;
    }

    /* COLLAGE (left side unique layout) - small floating animation */
    .about-left-collage {
        position: relative;
        width: 520px;
        min-height: 420px;
        display: block;
    }

    .collage-img {
        width: 420px;
        height: 320px;
        object-fit: cover;
        border-radius: 22px;
        box-shadow: 0 30px 70px rgba(0, 0, 0, 0.55);
        display: block;
    }

    .collage-back {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        transform: translate(0, 0);
    }

    .collage-front {
        position: absolute;
        bottom: -87px;
        left: 196px;
        z-index: 2;
        transform: translate(0, 0);
    }

    /* floating gradient card (on top, right) */
    .collage-card {
        position: absolute;
        right: -6px;
        top: 70px;
        z-index: 3;
        width: 220px;
        height: 200px;
        border-radius: 18px;
        padding: 14px;
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: space-between;
        background: linear-gradient(180deg, #fff200 0%, #e7dd00 100%);
        box-shadow: 0 20px 50px rgba(231, 255, 0, 0.12);
        border: 8px solid #fff;
        box-sizing: content-box;
        transform-origin: center;
        /* subtle float */
        animation: floatCard 6s ease-in-out infinite;
    }

    @keyframes floatCard {
        0% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-6px);
        }

        100% {
            transform: translateY(0);
        }
    }

    .card-inner {
        flex: 1;
        padding-right: 6px;
    }

    .card-inner h4 {
        margin: 0 0 6px 0;
        font-size: 16px;
        font-weight: 800;
        color: #000;
    }

    .card-inner p {
        margin: 0;
        font-size: 13px;
        color: #222;
        line-height: 1.3;
    }

    .card-badge {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        background: #000;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .card-avatar {
        width: 72px;
        height: 72px;
        object-fit: cover;
        border-radius: 12px;
        border: 6px solid white;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.35);
        background: #fff;
    }

    /* RIGHT SIDE */
    .about-right {
        padding-right: 40px;
    }

    .about-tag {
        color: #d4ff37;
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
    }

    .about-title {
        margin-top: 10px;
        font-size: 40px;
        font-weight: 800;
        line-height: 1.2;
    }

    /* Tabs */
    .about-tabs {
        margin: 25px 0 20px 0;
        display: flex;
        gap: 20px;
    }

    .tab {
        background: #2b2b2b;
        border: none;
        padding: 12px 28px;
        border-radius: 50px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: transform .18s ease, box-shadow .18s ease;
    }

    .tab:focus {
        outline: 3px solid rgba(231, 255, 0, 0.18);
    }

    .tab:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(231, 255, 0, 0.06);
    }

    .tab.active {
        background: #edff00;
        color: black;
        transform: translateY(-3px);
        box-shadow: 0 14px 40px rgba(231, 255, 0, 0.16);
    }

    .about-text {
        max-width: 550px;
        color: #bfbfbf;
        line-height: 1.7;
    }

    /* Fade / slide animations for content */
    .content-panel {
        opacity: 0;
        transform: translateY(8px);
        transition: opacity .36s ease, transform .36s ease;
    }

    .content-panel.show {
        opacity: 1;
        transform: translateY(0);
    }

    /* Impact list style */
    .impact-list {
        margin-top: 18px;
        padding-left: 18px;
    }

    .impact-list li {
        color: #d7d7d7;
        font-size: 16px;
        margin-bottom: 12px;
        line-height: 1.5;
    }

    .impact-list li::marker {
        color: var(--accent, #edff00);
    }

    /* Stats box (visible in mission mode) */
    .about-stats {
        display: flex;
        gap: 60px;
        margin: 30px 0;
        align-items: flex-end;
    }

    .stat {
        text-align: left;
    }

    .stat h2 {
        color: #edff00;
        font-size: 36px;
        margin: 0;
    }

    .stat p {
        margin: 6px 0 0 0;
        color: #bfbfbf;
    }

    /* CTA AREA */
    .about-buttons {
        display: flex;
        align-items: center;
        gap: 35px;
        margin-top: 40px;
    }

    .btn-more {
        background: #edff00;
        padding: 14px 26px;
        border-radius: 50px;
        font-weight: 800;
        color: black;
        text-decoration: none;
    }

    .btn-more:hover {
        background: #f6ff61;
    }

    /* small responsive tweaks */
    @media (max-width: 1000px) {
        .about-left-collage {
            width: 420px;
            min-height: 380px;
        }

        .collage-img {
            width: 340px;
            height: 260px;
            border-radius: 18px;
        }

        .collage-front {
            left: 90px;
            bottom: -64px;
        }

        .collage-card {
            width: 200px;
            height: 180px;
            top: 60px;
            right: -6px;
            border-width: 7px;
        }

        .card-avatar {
            width: 64px;
            height: 64px;
        }
    }

    @media (max-width: 700px) {
        .about-left-collage {
            width: 100%;
            min-height: auto;
            position: relative;
            padding-bottom: 20px;
        }

        .collage-back,
        .collage-front {
            position: static;
            width: 100%;
            height: auto;
            margin: 0 auto 12px;
            transform: none;
        }

        .collage-card {
            position: static;
            margin: 0 auto;
            display: flex;
            width: calc(100% - 40px);
            border-width: 6px;
        }

        .card-avatar {
            display: none;
        }

        .about-container {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .about-right {
            padding-right: 0;
        }
    }
</style>

<section class="about-section">
    <div class="about-container">

        <!-- LEFT IMAGES -->
        <div class="about-left-collage" aria-hidden="true">
            <img src="/about-1.jpg" alt="team back" class="collage-img collage-back">
            <img src="/about-2.jpg" alt="team front" class="collage-img collage-front">

            <!-- floating info card -->

        </div>

        <!-- RIGHT CONTENT -->
        <div class="about-right">

            <span class="about-tag">About Us</span>

            <h1 class="about-title">Empowering Institutions With<br>Next-Gen AI Technology</h1>

            <!-- Mission/Impact Buttons -->
            <div class="about-tabs" role="tablist" aria-label="About tabs">
                <button class="tab active" id="missionBtn" role="tab" aria-controls="missionPanel"
                    aria-selected="true">Our Mission</button>
                <button class="tab" id="historyBtn" role="tab" aria-controls="historyPanel" aria-selected="false">Our
                    Impact</button>
            </div>

            <!-- CONTENT AREA (Auto-swaps on click) -->
            <div id="aboutContent">

                <!-- Mission Panel (default visible) -->
                <div id="missionPanel" class="content-panel show" role="tabpanel" aria-labelledby="missionBtn">
                    <p class="about-text" id="missionText">
                        Our mission is to build intelligent, reliable, and scalable AI solutions that help educational
                        institutions enhance safety, discipline, and operational efficiency. We are dedicated to
                        transforming
                        traditional monitoring systems through automation, accuracy, and innovation.
                    </p>

                    <!-- Stats (mission mode) -->
                    <div class="about-stats" id="statsBox">

                    </div>
                </div>

                <!-- History / Impact Panel (hidden by default) -->
                <div id="historyPanel" class="content-panel" role="tabpanel" aria-labelledby="historyBtn"
                    style="display:none;">


                    <ul class="impact-list">
                        <li>500+ Successful Detections Processed</li>
                        <li>Real-Time AI-Based Monitoring</li>
                        <li>Instant Alerts for Non-Compliance</li>
                        <li>Automated Reports with Zero Manual Effort</li>
                    </ul>
                </div>
            </div>

            <!-- CTA -->
            <div class="about-buttons">
                <a href="#" class="btn-more">More About Us â†’</a>


            </div>

        </div>
    </div>
</section>

<script>
    // Elements
    const missionBtn = document.getElementById('missionBtn');
    const historyBtn = document.getElementById('historyBtn');
    const missionPanel = document.getElementById('missionPanel');
    const historyPanel = document.getElementById('historyPanel');

    // helper to show a panel
    function showPanel(showMission) {
        if (showMission) {
            // tabs
            missionBtn.classList.add('active'); missionBtn.setAttribute('aria-selected', 'true');
            historyBtn.classList.remove('active'); historyBtn.setAttribute('aria-selected', 'false');

            // panels
            historyPanel.style.display = 'none';
            missionPanel.style.display = 'block';

            // animate
            requestAnimationFrame(() => {
                missionPanel.classList.add('show');
                historyPanel.classList.remove('show');
            });

        } else {
            missionBtn.classList.remove('active'); missionBtn.setAttribute('aria-selected', 'false');
            historyBtn.classList.add('active'); historyBtn.setAttribute('aria-selected', 'true');

            missionPanel.style.display = 'none';
            historyPanel.style.display = 'block';

            requestAnimationFrame(() => {
                historyPanel.classList.add('show');
                missionPanel.classList.remove('show');
            });
        }
    }

    // initial state (show mission)
    showPanel(true);

    // click handlers
    missionBtn.addEventListener('click', () => showPanel(true));
    historyBtn.addEventListener('click', () => showPanel(false));

    // keyboard accessibility (left/right to switch)
    document.addEventListener('keydown', (e) => {
        if (document.activeElement === missionBtn || document.activeElement === historyBtn) {
            if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') {
                e.preventDefault();
                showPanel(document.activeElement === historyBtn); // toggle focus direction
            }
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                if (document.activeElement === missionBtn) showPanel(true);
                if (document.activeElement === historyBtn) showPanel(false);
            }
        }
    });
</script>