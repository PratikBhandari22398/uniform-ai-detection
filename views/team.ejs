<script>
    // Make keyboard focus styles visible and allow Enter to "click" connect button
    (function () {
        const cards = document.querySelectorAll('.expert-card');
        cards.forEach(card => {
            card.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    const btn = card.querySelector('.btn-connect');
                    if (btn) btn.click();
                }
            });
        });
    })();
</script>