<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #0C0C0C;
        /* full-site black background */
        color: white;
    }

    .navbar-custom {
        background-color: #000000;
        height: 90px;
        display: flex;
        align-items: center;
        padding: 0 40px;
        margin: 0;
        width: 100%;
        border-bottom: 1px solid #1A1A1A;
    }

    .logo-area {
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .logo-area img {
        width: 70px;
        height: 70px;
        border-radius: 50%;
    }

    .logo-text {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        font-family: "DynaPuff", sans-serif;
    }

    .pro-text {
        color: #E7FF00;
        /* neon yellow */
        font-weight: 800;
    }

    .right-buttons a,
    .right-buttons button {
        margin-left: 20px;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        padding: 8px 20px;
        border-radius: 6px;
        transition: 0.2s ease;
        border: none;
        cursor: pointer;
    }

    /* Yellow-outline button */
    .btn-login {
        color: #E7FF00;
        border: 2px solid #E7FF00;
        background: transparent;
    }

    .btn-login:hover {
        background-color: #E7FF00;
        color: #000;
    }

    /* Yellow solid button */
    .btn-signup {
        background-color: #E7FF00;
        color: #000;
        font-weight: 700;
    }

    .btn-signup:hover {
        background-color: #c7df00;
    }
</style>

<nav class="navbar-custom">

    <!-- LEFT SIDE: LOGO + NAME -->
    <div class="logo-area">
        <a href="/"><img src="/logo.png" alt="Logo"></a>
        <a href="/">
            <span class="logo-text">
                UniformCheck <span class="pro-text">Pro</span>
            </span>
        </a>
    </div>

    <!-- SPACE -->
    <div style="flex: 1;"></div>

    <!-- RIGHT SIDE BUTTONS -->
    <div class="right-buttons">

        <% if (!currentUser) { %>
            <!-- ========== NOT LOGGED IN ========== -->
            <a href="/login" class="btn-login">Login</a>
            <a href="/signup" class="btn-signup">Signup</a>

            <% } else { %>
                <!-- ========== LOGGED IN ========== -->
                <a href="/detect" class="btn-login">Detect</a>

                <form action="/logout" method="post" style="display:inline;">
                    <button class="btn-signup">
                        Logout (<%= currentUser.username %>)
                    </button>
                </form>

                <% } %>

    </div>

</nav>